--- 
import { categoriesTools } from '../consts';

let id = Astro.url.pathname.replaceAll("articles/", "").replaceAll("/", "");
---
<h1 class="text-2xl lg:text-6xl py-14 text-left block border-b-2 border-solid border-black">{Astro.props.frontmatter.title}</h1>
<div class="text-lg py-10 mx-auto">
	<slot />
</div>
<div class="lg:flex py-10 border-t-2 border-solid border-black">
	<div class="lg:flex-auto text-left">
		<!-- AddToAny BEGIN -->
		<div class="mb-10 lg:mb-0 flex">
			<div class="a2a_kit a2a_kit_size_32 a2a_default_style">
				<a class="a2a_dd grayscale" href="https://www.addtoany.com/share"></a>
				<a class="a2a_button_twitter grayscale"></a>
				<a class="a2a_button_telegram grayscale"></a>
				<a class="a2a_button_copy_link grayscale"></a>
			</div>
			<div>
				<span class="mx-2 opacity-10">|</span>
				<a target="_blank" href={`https://github.com/Awilum/awilum.src/blob/master/src/content/articles/${id}.md`} class="bg-gray-200 px-3 py-1 no-underline text-sm">Улучшить</a>
			</div>
		</div>
		<script>
		var a2a_config = a2a_config || {};
		a2a_config.locale = "ru";
		</script>
		<script async src="https://static.addtoany.com/menu/page.js"></script>
		<!-- AddToAny END -->
	</div>
	<div class="lg:flex-auto lg:text-right">
		{
			Astro.props.frontmatter.categories.map((category) => (
					<a href=`/articles/categories/${category}/` class="bg-gray-200 px-3 py-1 no-underline text-sm">{categoriesTools[category]['title']}</a>
				)
			)
		}
		<span class="mx-2 opacity-10">|</span>
		<a href="/articles/" class="bg-gray-200 px-3 py-1 no-underline text-sm">Все инструменты</a>
	</div> 
</div>
